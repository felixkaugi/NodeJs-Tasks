<html lang="en">
<head>
    <title>Sales</title>
</head>
<style>
  form{
    margin-top: 50px;
    padding: 10px;
  }
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
<body>
  <%- include ('../partials/menu') %>
  <form action="/sales" method="post">
    <legend>Sales</legend>
    <div class="row g-3">
      <div class="col">
        <label for="">Receipt No.</label>
        <input type="text"name="receipt_no" class="form-control" placeholder="Receipt No.">
      </div>
      <div class="col">
        <label for="Cashier">Cashier</label>
        <input type="text"name="cashier" class="form-control" placeholder="Cashier">
      </div>
    </div>
    <div class="row g-3">
      <div class="col">
        <label for="customers Name">Customers Name</label>
        <input type="text"name="customers_name" class="form-control" placeholder="Customer Name">
      </div>
      <div class="col">
        <label for="Discount">Discount</label>
        <input type="text"name="discount" class="form-control" placeholder="Discount">
      </div>
    </div>
    <div class="row g-3">
      <div class="col">
        <label for="date">Date</label>
        <input type="date"name="date" class="form-control" >
      </div>
      <div class="col">
        <label for="price">Price</label>
        <input type="text"name="price" class="form-control" placeholder="price">
      </div>
    </div>
    <div class="row g-2">
      <div class="col">
        <label for="product_name">Product Name</label>
        <input type="text"name="product_name"class="form-control" placeholder="Product Name">
      </div>
    </div>
    <div class="col-12">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</body>
</html>